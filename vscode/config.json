{
  "workbench.iconTheme": "material-icon-theme",
  "gopls": {
    "ui.semanticTokens": true
  },
  "workbench.editor.empty.hint": "hidden",
  "security.workspace.trust.untrustedFiles": "open",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnSave": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vim.leader": " ",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "w"], "commands": [":w"] },
    { "before": ["<leader>", "h"], "commands": [":noh"] },
    {
      "before": ["<leader>", "/"],
      "after": ["V", "g", "c", "<Esc>"],
      "commands": []
    },
    {
      "before": ["<leader>", "n"],
      "commands": [":cn"]
    },
    {
      "before": ["<leader>", "N"],
      "commands": [":cp"]
    },
    {
      "before": ["<leader>", "l"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "h"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "c"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "s"],
      "commands": ["workbench.action.gotoSymbol"]
    },
    {
      "before": ["<leader>", "f", "S"],
      "commands": ["workbench.action.showAllSymbols"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "commands": ["workbench.action.findInFiles"]
    },
    {
      "before": ["<leader>", "f", "b"],
      "commands": ["git.checkout"]
    },
    {
      "before": ["K"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<C-d>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<C-u>"]
    },
    {
      "before": ["<Tab>"],
      "commands": ["selectNextSuggestion"],
      "when": "suggestWidgetVisible"
    },
    {
      "before": ["<C-n>"],
      "commands": ["editor.action.triggerSuggest"]
    },
    {
      "before": ["<Esc>"],
      "commands": ["hideSuggestWidget", "hideSignatureHelp"],
      "when": "suggestWidgetVisible || parameterHintsVisible"
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "/"],
      "after": ["g", "C", "<Esc>"],
      "commands": []
    },
    {
      "before": ["<Tab>"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<S-Tab>"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.fontSize": 18,
  "editor.lineHeight": 1.6,
  "editor.fontFamily": "ZedMono Nerd Font",
  "editor.bracketPairColorization.enabled": false,
  "workbench.colorTheme": "Makurai",

  "workbench.statusBar.visible": false,
  "editor.minimap.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.sideBar.location": "right",
  "breadcrumbs.enabled": false,
  "window.menuBarVisibility": "toggle",
  "workbench.tips.enabled": false,
  "editor.lightbulb.enabled": "off",

  "vscode_custom_css.imports": [
    "file:///C:/Users/meron/.dotfiles/vscode/config.css"
  ]
}
